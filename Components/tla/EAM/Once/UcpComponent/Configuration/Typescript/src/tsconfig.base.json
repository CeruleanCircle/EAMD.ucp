{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",                           
      "moduleResolution": "node",             
      "rootDir": "./src",                
      "declaration": true,                             
      "sourceMap": true, 
      "outDir": "./dist",
      "removeComments": true,
      "esModuleInterop": true, 
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true 
    }
  }
  